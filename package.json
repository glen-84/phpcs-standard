{
    "name": "@glen-84/phpcs-standard",
    "version": "1.0.0",
    "description": "A PSR-12 compliant coding standard for PHP.",
    "author": "Glen Ainscow",
    "scripts": {
        "format": "prettier --write \"**/*.php\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.php": "prettier --check"
    },
    "devDependencies": {
        "@glen-84/prettier-config": "^2.1.1",
        "@prettier/plugin-php": "^0.14.2",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glen-84/phpcs-standard.git"
    },
    "license": "MIT",
    "prettier": "@glen-84/prettier-config"
}
